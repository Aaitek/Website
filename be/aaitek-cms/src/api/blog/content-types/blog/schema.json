{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": { "singularName": "blog", "pluralName": "blogs", "displayName": "Blog" },
  "options": { "draftAndPublish": true },
  "attributes": {
    "Title": { "type": "string", "required": true },
    "slug": { "type": "uid", "targetField": "Title", "required": true },
    "Description": { "type": "text", "required": true },
    "Content": { "type": "richtext", "required": false },

    "Image": { "type": "media", "multiple": true, "allowedTypes": ["images"] },
    "images": { "type": "component", "repeatable": false, "component": "media.hero-images" },
    "publishing": { "type": "component", "repeatable": false, "component": "common.publishing" },
    "seo": { "type": "component", "repeatable": false, "component": "common.seo" },

    "tags": { "type": "relation", "relation": "manyToMany", "target": "api::tag.tag" },
    "category": { "type": "relation", "relation": "manyToOne", "target": "api::category.category" },
    "author": { "type": "relation", "relation": "manyToOne", "target": "api::author.author" },
    "relatedPosts": { "type": "relation", "relation": "manyToMany", "target": "api::blog.blog" }
  }
}
